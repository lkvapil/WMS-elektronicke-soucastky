@startuml 02a_conceptual_model
hide circle
title WMS Elektronicke soucastky -- Konceptualni model trid

skinparam backgroundColor #FFFFFF
skinparam classBackgroundColor #F2F2F2
skinparam classBorderColor #444444
skinparam classArrowColor #222222
skinparam classFontSize 11
skinparam classAttributeIconSize 0

abstract class PohybSkladu {
  id : int
  datum : DateTime
  mnozstvi : int
  --
  validovatMnozstvi()
  ulozitZaznam()
}

class Naskladneni {
  lokace : String
  --
  provestNaskladneni()
  zvysitMnozstvi()
}

class Vyskladneni {
  cil : String
  --
  provestVyskladneni()
  snizitMnozstvi()
}

class Presun {
  zdrojLokace : String
  cilovaLokace : String
  --
  provestPresun()
}

class SkladovaLokace {
  kodLokace : String
  popis : String
  --
  pridatSoucastku()
  odebratSoucastku()
  zobrazObsah()
}

class Soucastka {
  partNumber : String
  nazev : String
  kategorie : String
  mnozstvi : int
  --
  aktualizovatUdaje()
  ziskatStav()
}

class Dodavatel {
  nazev : String
  zeme : String
  adresa : String
  email : String
  --
  aktualizovatKontakt()
  zobrazSoucastky()
}

PohybSkladu <|-- Naskladneni
PohybSkladu <|-- Vyskladneni
PohybSkladu <|-- Presun

Dodavatel "1\n[katalogCislo]" --> "0..1" Soucastka : dodava >

SkladovaLokace "1" o-- "0..*" Soucastka      : obsahuje >
PohybSkladu "0..*" --> "1"    SkladovaLokace : probiha na >
PohybSkladu "0..*" --> "1"    Soucastka      : tyka se >

@enduml
